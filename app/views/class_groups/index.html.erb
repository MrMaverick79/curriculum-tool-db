<p><%= link_to "Create Class Group",new_class_group_path %> </p>

<h2>All Classes:</h2>

 <table>
  <tr>
    <th>Class Code</th>
    <th>User</th>
    <th>Label</th>
    <th>Learning Area</th>
    <th>Subject</th>
    <th>Description</th>
  </tr>

  <% @class_group.each do |group |  %>
        <tr>
            <td> <%= link_to group.class_code, class_group_path(group.id) %> 
            </td> 
            <td> <%= group.user.name %>
            </td>
            <td>
             <%= group.name %>
            </td>
            <td>
             <%= group.learning_area.name %>
            </td>
            <td>
             TODO: Link Subject
            </td>
            <td>
             <%= group.description %>
            </td>
            <td> 
                <ul>
                     <li><%= link_to "Edit", edit_class_group_path(group.id) %></li>
                   
                    <li><%= button_to "Delete", class_group_path(group.id), method: 'delete', , form: { data: { turbo_confirm: "Are you sure? This action cannot be undone" }}  %></li>
                    
                </ul>
            </td>
        </tr>
        
    
    <% end  %>
</table> 


